{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi":["error", "always"],
        "comma-dangle": 0,
        "curly": ["error", "multi"],
        "brace-style":"warn",
        "indent": "warn",
        "space-before-function-paren": ["warn", "never"],
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-use-before-define": "off",
        "no-unused-vars": "off",
        "no-undef": "off"
    }
}
